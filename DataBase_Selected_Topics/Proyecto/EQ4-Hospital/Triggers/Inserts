-- Trigger de Persona
CREATE TRIGGER TR_INS_Persona ON Persona AFTER INSERT
AS BEGIN 
	INSERT INTO [dbo].[Bitacora]
           ([operacion]
           ,[usuario]
           ,[host]
           ,[modificado]
           ,[tabla])
     VALUES
           ('INSERT'
		   ,SUSER_NAME()
		   ,@@SERVERNAME
		   , GETDATE()
		   ,'Persona')
END 

