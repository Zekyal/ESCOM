-- Trigger persona
CREATE TRIGGER TR_UPD_Persona ON Persona AFTER UPDATE
AS BEGIN 
	INSERT INTO [dbo].[Bitacora]
           ([operacion]
           ,[usuario]
           ,[host]
           ,[modificado]
           ,[tabla])
     VALUES
           ('UPDATE'
	   ,SUSER_NAME()
	   ,@@SERVERNAME
	   , GETDATE()
	   ,'Persona')
END 

