-- Trigger de Persona
CREATE TRIGGER TR_DEL_Persona ON Persona
AFTER DELETE
AS BEGIN
INSERT INTO [dbo].[Bitacora]
           ([operacion]
           ,[usuario]
           ,[host]
           ,[modificado]
           ,[tabla])
     VALUES
        ('DELETE'
	   ,SUSER_NAME()
	   ,@@SERVERNAME
	   , GETDATE()
	   ,'Persona')
END 

